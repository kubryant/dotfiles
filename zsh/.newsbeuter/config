# general
auto-reload yes
show-keymap-hint no
swap-title-and-hints no
browser "'/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary'"
bookmark-cmd "py-pouch.py"

# mappings
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article
bind-key g home
bind-key G end
bind-key ^F pagedown
bind-key ^B pageup
bind-key p bookmark

# colors
color background white default
color listnormal white default 
color info magenta default standout
color listfocus black magenta standout
color listfocus_unread black magenta standout
color listnormal_unread white default

# ignores
ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""
